{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Article index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Date</th>
					<th>Content</th>
					<th>Visible</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article.id }}</td>
						<td>{{ article.title }}</td>
						<td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
						<td>{{ article.content }}</td>
						<td>{{ article.visible ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
							<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_article_new') }}">Create new</a>
	</div>
{% endblock %}
